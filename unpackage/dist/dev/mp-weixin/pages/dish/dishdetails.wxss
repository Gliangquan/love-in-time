.btn-shopping {
  background-color: #7F67F8;
  border: none;
  padding: 10px 20px;
  border-radius: 12px;
  color: #FFFFFF;
  font-size: 16px;
  cursor: pointer;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-content: center;
}
.shopping-backicon {
  width: 50rpx;
  height: 50rpx;
}
.btn-buy {
  background-color: #7F67F8;
  border: none;
  padding: 10px 20px;
  border-radius: 12px;
  color: #f4f6f9;
  font-size: 16px;
  cursor: not-allowed;
}